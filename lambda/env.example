# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/moovia?retryWrites=true&w=majority

# Kling AI API Credentials (Access Key + Secret Key)
# Get yours at: https://app.klingai.com/global/dev/document-api
KLING_ACCESS_KEY=your_kling_access_key_here
KLING_SECRET_KEY=your_kling_secret_key_here

# Google Veo API Credentials (for video generation)
# Get yours at: https://aistudio.google.com/apikey
# 
# Simple setup (RECOMMENDED):
#   1. Go to https://aistudio.google.com/apikey
#   2. Click "Create API Key"
#   3. Copy the API key
#   4. Paste below
#
# Required:
GOOGLE_VEO_API_KEY=your_api_key_here
#
# Optional (not needed for Google AI Studio):
# GOOGLE_VEO_PROJECT_ID=your_project_id_here
# GOOGLE_VEO_LOCATION=us-central1
#
# See lambda/GOOGLE_VEO_SETUP.md for detailed instructions!

# Google Gemini API Key (for image generation)
GEMINI_API_KEY=your_gemini_api_key_here

# AWS Configuration (optional, for deployment)
AWS_REGION=us-east-1
AWS_LAMBDA_FUNCTION_NAME=moovia-api

# RevenueCat Webhook Configuration
# Get the Authorization Bearer Token from RevenueCat Dashboard:
# 1. Go to: https://app.revenuecat.com/
# 2. Project Settings > Integrations > Webhooks
# 3. Copy the "Authorization Bearer Token"
# IMPORTANT: This is required for webhook authentication in production!
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_token_here

# Server Configuration (for local development)
PORT=3000
NODE_ENV=development

